  <template name="extra" value="const val EXTRA_$name$ = &quot;$prefix$.extra.$value$&quot;" description="Key for a extras bundle" toReformat="true" toShortenFQNames="true">
    <variable name="value" expression="" defaultValue="" alwaysStopAt="true" />
